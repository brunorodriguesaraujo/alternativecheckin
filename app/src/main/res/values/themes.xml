<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.AlternativeCheckIn" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorBackgroundSecondary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <style name="MaterialComponents.FullScreen" parent="Theme.AlternativeCheckIn">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:padding">14dp</item>
    </style>

    <style name="DialogCustomer" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/textColorBlack</item>
        <item name="hintTextColor">@color/colorNeutral01</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="android:textCursorDrawable">@drawable/shape_cursor</item>
    </style>

    <style name="ImageBack">
        <item name="android:src">@drawable/ic_arrow_back_24</item>
        <item name="android:layout_margin">16dp</item>
        <item name="tint">@color/colorPrimary</item>
    </style>

    <style name="TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textColorBlack</item>
    </style>

</resources>