<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.AlternativeCheckIn" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorBackgroundSecondary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <style name="MaterialComponents.FullScreen" parent="Theme.AlternativeCheckIn">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:padding">14dp</item>
    </style>

    <style name="DialogCustomer" parent="Theme.AppCompat.Light.Dialog.Alert" >
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>